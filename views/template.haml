%html{lang: "es"}
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{charset: "utf-8"}/
    %title Piedra Papel Tijera
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %meta{content: "Practica 5 SYTW", name: "description"}/
  
    / Bootstrap
    %link{href: "public/assets/css/bootstrap.css", rel: "stylesheet"}/
    %link{href: "public/assets/css/bootstrap-responsive.css", rel: "stylesheet"}/
    %link{href: "public/assets/css/estilo.css", rel: "stylesheet"}/
    %link{href: "public/assets/css/font-awesome.min.css", rel: "stylesheet"}/
    / Touch icons
    %link{href: "public/assets/ico/favicon.ico", rel: "shortcut icon"}/
    %link{href: "public/assets/ico/apple-touch-icon-144-precomposed.png", rel: "apple-touch-icon-precomposed", sizes: "144x144"}/
    %link{href: "public/assets/ico/apple-touch-icon-114-precomposed.png", rel: "apple-touch-icon-precomposed", sizes: "114x114"}/
    %link{href: "public/assets/ico/apple-touch-icon-72-precomposed.png", rel: "apple-touch-icon-precomposed", sizes: "72x72"}/
    %link{href: "public/assets/ico/apple-touch-icon-57-precomposed.png", rel: "apple-touch-icon-precomposed"}/
  %body{"data-spy" => "scroll", "data-target" => ".top-spy"}
    / HEADER
    %header#head-top
      .navbar.navbar-fixed-top.navbar-inverse
        .navbar-inner
          .container
            %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", type: "button"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{href: "#head-top"}
              %i.icon-github-sign.icon-x3
              PIEDRA PAPEL Y TIJERA
            .nav-collapse.collapse.top-spy
              %ul#topnav.nav
                %li.active
                  %a{href: "#head-top"} Home
                %li
                  %a{href: "#Section-1"} Jugar
                %li
                  %a{href: "#Section-2"} Estadística
            / /.nav-collapse
      / Vista principal con slider
      .hero-unit
        .container
          #myCarousel.carousel.slide
            %ol.carousel-indicators
              %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
              %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
            / Carousel items
            .carousel-inner
              .active.item
                .row
                  .span5.offset2.text-center{style: "padding-top:40px; "}
                    %h1 Bienvenido a Piedra Papel y Tijera
                    %p.lead
                      %br/
                      ¡Intenta ganar a la máquina!
                  .span4.text-center
                    / %img{alt: "Imagen Piedra Papel Tijeras", src: "public/img/pipati.jpg"}/
              .item
                .row
                  .span4.offset1.text-center
                    / %img{alt: "Imagen Piedra Papel Tijeras", src: "public/img/pipati.jpg"}/
                  .span5{style: "padding-top:40px; "}
                    %h1 SISTEMAS Y TECNOLOGÍAS WEB
                    %p.lead
            / Carousel nav
            %a.carousel-control.left{"data-slide" => "prev", href: "#myCarousel"}
              %i.icon-chevron-left
            %a.carousel-control.right{"data-slide" => "next", href: "#myCarousel"}
              %i.icon-chevron-right
      / GO BTN WRAPPER
      .gobtnwrapper
        %a.gobtn{href: "#Section-1"}
          %i.icon-chevron-down.icon-large
      / /GO BTN WRAPPER
    / / HEADER
    - if !player_throw
      / SECTION-1
      %section#Section-1
        / GO BTN WRAPPER
        .gobtnwrapper
          %a.gobtn{href: "#Section-2"}
            %i.icon-chevron-down.icon-large
        / /GO BTN WRAPPER
        .container
          .row
            .span12.page-header.text-center
              %h3= answer
              %br/
          %br/
          %br/
          %br/
          .row-fluid
            .span4.text-center.box
              %div
                %img{alt: "Icono Piedra", src: "public/img/piedra.jpg"}/
              %br/
              %p
                %a.btn.btn-large{:href => '?choice=Piedra#Section-1'} PIEDRA
            .span4.text-center.box
              %div
                %img{alt: "Icono Papel", src: "public/img/papel.jpg"}/
              %br/
              %p
                %a.btn.btn-large{:href => '?choice=Papel#Section-1'} PAPEL
            .span4.text-center.box
              %div
                %img{alt: "Icono Tijera", src: "public/img/tijera.jpg"}/
              %br/
              %p
                %a.btn.btn-large{:href => '?choice=Tijera#Section-1'} TIJERA
        / / CONTAINER
      / / SECTION-1
    - else
      / SECTION-1
      %section#Section-1
        / GO BTN WRAPPER
        .gobtnwrapper
          %a.gobtn{href: "#Section-2"}
            %i.icon-chevron-down.icon-large
        / /GO BTN WRAPPER
        .container
          .row
            .span12.page-header.text-center
              %h2 Elección de la máquina: #{computer_throw}
              %br/
              %h2 Tu elección: #{player_throw}
              %br/
              %h2= answer
          .row-fluid
            .span4.text-center.box
              %div
                %img{alt: "Icono Piedra", src: "public/img/piedra.jpg"}/
              %br/
              %p
                %a.btn.btn-large{:href => '?choice=Piedra'} PIEDRA
            .span4.text-center.box
              %div
                %img{alt: "Icono Papel", src: "public/img/papel.jpg"}/
              %br/
              %p
                %a.btn.btn-large{:href => '?choice=Papel'} PAPEL
            .span4.text-center.box
              %div
                %img{alt: "Icono Tijera", src: "public/img/tijera.jpg"}/
              %br/
              %p
                %a.btn.btn-large{:href => '?choice=Tijera'} TIJERA
    
    / Javascript
    / Puesto al final del documento para que las paginas cargen mas rapido
    %script{src: "public/assets/js/jquery.js", type: "text/javascript"}
    %script{src: "public/assets/js/bootstrap.min.js", type: "text/javascript"}
    %script{src: "public/assets/js/jquery.parallax-1.1.3.js", type: "text/javascript"}
    %script{src: "public/assets/js/jquery.localscroll-1.2.7-min.js", type: "text/javascript"}
    %script{src: "public/assets/js/jquery.scrollTo.min.js", type: "text/javascript"}
    %script{src: "public/assets/js/jquery.nicescroll.min.js", type: "text/javascript"}